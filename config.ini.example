; Пример конфигурационного файла для book_scanner

[database]
; Тип базы данных: sqlite или mysql
type = mysql

; Настройки для MySQL
host = localhost
user = root
password = your_password
database = mybook
port = 3306

; Настройки для SQLite
; path = /path/to/books.db

[scanner]
; Директория с книгами
books_dir = /home/user/books

; Алгоритм хеширования: md5, sha1, sha256, sha512
hash_algorithm = md5

; Пересканировать неизмененные файлы (yes/no)
rescan_unchanged = no

; Включить поддержку INPX (yes/no)
enable_inpx = yes

; Очищать базу данных при импорте INPX (yes/no)
clear_database_inpx = no

; Файл для логирования (STDERR для вывода в stderr)
log_file = scanner.log

; Уровень логирования: debug, info, warning, error
log_level = info