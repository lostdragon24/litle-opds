<?php
// create_favicon.php - запустите один раз чтобы создать favicon.ico
$image = imagecreate(16, 16);
$bgColor = imagecolorallocate($image, 70, 130, 180); // steelblue
$textColor = imagecolorallocate($image, 255, 255, 255);

// Рисуем букву "B"
imagestring($image, 2, 4, 2, 'B', $textColor);

header('Content-Type: image/x-icon');
imagepng($image, __DIR__ . '/../favicon.ico');
imagedestroy($image);

echo "Favicon created!";
?>